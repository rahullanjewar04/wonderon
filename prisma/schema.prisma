generator client {
  provider = "prisma-client"
  output   = "../src/utils/prisma/generated"
}

generator json {
  provider = "prisma-json-types-generator"
  output   = "../src/utils/prisma/generated"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           String     @id @default(uuid())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  name         String
  role         String
  credentials  String
  settings     Settings?
  auditLogs    AuditLog[] @relation("AuditLog_actor")
  createdBooks Book[]     @relation("Book_createdBy")
  updatedBooks Book[]     @relation("Book_updatedBy")
  bookId       String?

  @@map("users")
}

model Book {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  title         String
  authors       String
  createdByUser User     @relation("Book_createdBy", fields: [createdBy], references: [id])
  createdBy     String
  updatedByUser User?    @relation("Book_updatedBy", fields: [updatedBy], references: [id])
  updatedBy     String?
  publishedBy   String

  @@map("books")
}

model Settings {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String   @unique // One-to-one constraint
  user      User     @relation(fields: [userId], references: [id])
  /// [AuditSettings]
  auditLog  Json     @default("{\"retention\":{\"days\":30}}")
  // Can have other settings for that user. Normally users would be a part of tenant so setting should be linked to a tenant

  @@map("settings")
}

model AuditLog {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  entity    String
  entityId  String
  action    String
  diff      Json?
  requestId String
  ip        String
  actorId   String? // Nullable for server actions
  actor     User?    @relation("AuditLog_actor", fields: [actorId], references: [id])
  master    Boolean

  @@map("audit_logs")
}
